
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Register</h2>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="mb-3 d-flex align-items-center">
                    <label asp-for="Username" class="form-label me-3" style="width: 100px;"></label>
                    <input asp-for="Username" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger ms-2"></span>
                </div>

                <div class="mb-3 d-flex align-items-center">
                    <label asp-for="Email" class="form-label me-3" style="width: 100px;"></label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger ms-2"></span>
                </div>

                <div class="mb-3 d-flex align-items-center">
                    <label asp-for="FullName" class="form-label me-3" style="width: 100px;"></label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger ms-2"></span>
                </div>

                <div class="mb-3 d-flex align-items-center">
                    <label asp-for="Password" class="form-label me-3" style="width: 100px;"></label>
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger ms-2"></span>
                </div>

                <div class="mb-3 d-flex align-items-center">
                    <label asp-for="ConfirmPassword" class="form-label me-3" style="width: 100px;"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger ms-2"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Back to Home</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary mx-2">Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
